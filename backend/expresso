#!/bin/sh

NODE_PATH="/usr/local/expresso/etc/expresso"
NODE_PATH="$NODE_PATH:/usr/local/expresso/share/expresso"
NODE_PATH="$NODE_PATH:/usr/local/expresso/share/expresso/models"
NODE_PATH="$NODE_PATH:/usr/local/expresso/share/expresso/controllers"
NODE_PATH="$NODE_PATH:/usr/local/expresso/share/expresso/utils"
NODE_PATH="$NODE_PATH:/usr/local/expresso/share/expresso/plugins"
export NODE_PATH

NODE_ENV=production
export NODE_ENV

cd /usr/local/expresso/share/expresso && /usr/local/bin/node /usr/local/expresso/share/expresso/exserv.js $@
#EOF


